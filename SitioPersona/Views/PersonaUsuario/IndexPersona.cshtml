@{
    ViewData["Title"] = "Inicio";
}

@model IEnumerable<SitioPersona.Models.PersonaUsuario>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Consulta de Personas</h2>

<p>
    <br />
    @Html.ActionLink("Registrar", "Create", null, null, htmlAttributes: new { @Class= "btn btn-primary" })
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.Label("Identificación")
        </th>
        <th>
            @Html.Label("TI")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellidos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.Label("Usuario")
        </th>
        <th>
            @Html.Label("Fecha")
        </th>

    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.NumeroIdentificacion)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TipoIdentificacion)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Nombres)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Apellidos)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Usuario1)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FechaCreacion)
    </td>
</tr>
    }
    
</table>
<tr>
    <td>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </td>
</tr>